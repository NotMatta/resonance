generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int      @id @default(autoincrement())
    name      String?  @db.VarChar(255)
    email     String   @unique @db.VarChar(255)
    password  String
    pfp       String
    followerCount Int @default(0)
    FollowingCount Int @default(0)
    followers Follow[]  @relation("Followers")
    following Follow[]  @relation("Followings")
}

model Follow {
    id        Int     @id @default(autoincrement())
    follower  User    @relation(fields: [followerId], references: [id],"Followings")
    following User    @relation(fields: [followingId], references: [id],"Followers")
    followerId Int
    followingId Int

    @@unique([followingId,followerId])
}

